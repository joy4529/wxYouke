
.subject .slideBox{
  width: 100%;
  height: 295rpx;
}
.subject .slideBox image{
  width: 750rpx;
  height: 295rpx;
}
.boxOut{
  white-space: nowrap;
  box-shadow:0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}
.boxOut .box{
  display: inline-block;
  font-size: 25rpx;
  padding: 30rpx;
  text-align: center;
}
.sliderBox .boxOut .box image{
  width: 98rpx;
  height: 98rpx;
}

.works{
  width: 100%;
  margin: 50rpx 0;
}

.nav-in{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.works navigator image{
  width: 340rpx;
  height: 240rpx;
  display: block;
}

.works .nav-in navigator{
  margin-top: 10rpx;
  position: relative;
}
.works .nav-in .nav{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top:0;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.works .nav-in .nav view{
  font-size: 30rpx;
  color:white ;
  opacity: 0.6;
  text-align: center;
}


